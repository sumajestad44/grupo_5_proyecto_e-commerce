<!DOCTYPE html>
<html lang="es">
<head>

  <%- include('./partials/head') %> 
  <link rel="stylesheet" href="/css/productDetail.css">

</head>

<body>

    <%- include('./partials/header') %> 

<main>
<div class="productDetail">
    <div class="img-producto">
      <img src="/images/products/<%=product.image%>">
    </div>
    <div class="product">
        <div class="text-detail">
            <h2><%=product.name%></h2>
            <p><%=product.description%></p> 
        </div>
        <% if (locals.product.category == "Yerba") { %>
            <div class="select-weight">
                <p>$ <%=product.price%></p><select name="" class="weight"> 
                            <option value="none"> Seleccionar peso</option>
                            <option value="300g">300g</option>
                            <option value="500g">500g</option>
                            <option value="1kg">1kg</option>
                        </select>
            </div>
        <% } %>
            <input type="submit" class="select-weight" value="Agregar al carrito" class="button-detail">
    
        <% if (locals.userLogged) { %>
            <% if (locals.userLogged.category == "Admin") { %>
                <a href="/products/edit/<%= product.id %>">
                <button class="buttons">Editar producto</button>
                </a>
        <% } %>
         
        <% } %>
    </div>
</div>  
