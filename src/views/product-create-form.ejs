<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %> 
    <link rel="stylesheet" href="/css/product-create-form.css">
<body>
    <%- include('./partials/header') %> 
<div class="form-group">
    <div>
        <h2> Creación de productos </h2>
    </div>
    <div>
        <form action="/products/create" method="POST" enctype="multipart/form-data">
            <div class="create-product"> 
                <label for="name">Nombre del producto: </label>
                <input type="text" id="name" name="name">
                <% if (locals.errors && errors.name) { %>
                    <div class="text-danger">
                       <%= errors.name.msg %>
                    </div>
                   <% } %>

                <label for="description">Descripción: </label>
                <textarea name="description" id="description" maxlength="255"></textarea>
                <% if (locals.errors && errors.description) { %>
                    <div class="text-danger">
                       <%= errors.description.msg %>
                    </div>
                   <% } %>
            

                <label for="category">Categoría:</label>
                <select name="category" id="category">
                    <option value="">Elegí</option>
                    <option value="Yerba">Yerba</option>
                    <option value="Mate">Mate</option>
                    <option value="Bombilla">Bombilla</option>
                    <option value="Termo">Termo</option>
                </select>
                <% if (locals.errors && errors.category) { %>
                    <div class="text-danger">
                       <%= errors.category.msg %>
                    </div>
                   <% } %>

                <label for="size">Tamaño:</label>
                <input type="text" id="size" name="size">

                <label for="price">Precio:</label>
                <input type="text" id="price" name="price">
                <% if (locals.errors && errors.price) { %>
                    <div class="text-danger">
                       <%= errors.price.msg %>
                    </div>
                   <% } %>

                <label for="image">Imágen del producto:</label>
                <input type="file" name="image" id="image">
                <% if (locals.errors && errors.image) { %>
                    <div class="text-danger">
                       <%= errors.image.msg %>
                    </div>
                   <% } %>
            </div>
            <div  class="select-weight"> 
                <button type="submit" class="button">Crear producto</button>
            </div>

        </form>
    </div>
</div>
    

<footer>
    <%- include('./partials/footer') %> 
</footer>

</body>
</html>