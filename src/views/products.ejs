<!DOCTYPE html>
<html lang="en">
<head>
   
    <title>Tierra Mate - Todos los productos</title>
    <link rel="stylesheet" href="/css/products.css">
    <%- include('./partials/head') %> 
</head>
<body>   


    <%- include('./partials/header') %> 


<div class="titulo-productos">
    <h2>Todos los productos</h2> 
</div>
<div class="container">
    <div class="row">
        <% products.forEach(el=> { %> 
        <div class="products-container">
            <section class="product-box">
                <a href="/products/detail/<%= el.id %>">
                    <p class="product-name"><%= el.name %></p>
                    <figure class="product-image">
                        <img src="/images/products/<%= el.image %>" class="image" alt="imagen de producto">
                    </figure>

                    <div class="product-description">
                        <p><%= el.description %></p>
                        <p><%= el.category %></p>
                        <p><%= el.type %></p>
                        <p><%= el.size %></p>
                    </div>

                    <article class="product-price">

                        <h2>$<%= el.price %></h2>
                        
                        <i class="fas fa-truck"></i>
                    </article>
                </a>
            </section>
        </div>
        <% }) %> 
    </div>
</div>


<footer>
    <%- include('./partials/footer') %> 
</footer>

</body>
</html>